## aliases ##

# pacman #
alias lastins="awk '\$3 ~ /installed/' /var/log/pacman.log | tail --lines=20"
alias lastuns="awk '\$3 ~ /removed/' /var/log/pacman.log | tail --lines=20"
alias lastupg="awk '\$3 ~ /upgraded/' /var/log/pacman.log | tail --lines=20"
alias clean="yay -Yc"

# convinience #
