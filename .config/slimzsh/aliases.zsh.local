alias v="nvim"
# alias z="zathura"
alias zshalias="v ~/.config/slimzsh/aliases.zsh.local"
alias addtor="transmission-remote -a"
alias wttr="curl -s 'wttr.in/Seoul?format=%c+%t\n'"
alias c="chafa"
alias duf="duf -only local,fuse"
